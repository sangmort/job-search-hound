{
  "manifest_version": 3,
  "name": "JobSearch Hound",
  "version": "1.0.0",
  "description": "Blocks promoted job postings on Indeed.com",
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.indeed.com/*"],
      "js": ["content.js"]
    }
  ]
}