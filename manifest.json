{
    "manifest_version": 2,
    "name": "JobSearch Hound",
    "version": "1.0.0",
    "description": "Easier way to search LinkedIn & Indeed.",
    "icons": {
        "16": "/icons/on.svg",
        "24": "/icons/on.svg",
        "32": "/icons/on.svg",
        "48": "/icons/on.svg",
        "64": "/icons/on.svg"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["fun.css"],
            "js": ["main.js"],
            "run_at": "document_start",
            "match_about_blank": true,
            "all_frames": true
        }
    ],
        "browser_action": {
            "browser_style": true,
            "default_icon": {
                "16": "/icons/on.svg",
                "24": "/icons/on.svg",
                "32": "/icons/on.svg",
                "48": "/icons/on.svg",
                "64": "/icons/on.svg"
            },
        "default_title": "Job Search Hound",
        "default_area": "navbar"
    },
    "permissions": [
        "<all_urls>",
        "activeTab",
        "tabs"
    ]
}